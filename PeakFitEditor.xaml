<Window x:Class="XPSUI.PeakFitEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XPSUI"
        mc:Ignorable="d"
        Title="PeakFitEditor" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="PeakFitDataGrid" Grid.Row="0" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="40"/>

                <DataGridTextColumn Header="Level" Binding="{Binding level}" Width="60"/>

                <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="100"/>

                <DataGridTextColumn Header="Center (eV)" Binding="{Binding center}" Width="80"/>
                <DataGridTextColumn Header="± Error" Binding="{Binding center_error}" Width="60"/>
                <DataGridTextColumn Header="FWHM" Binding="{Binding FWHM}" Width="60"/>
                <DataGridTextColumn Header="± Error" Binding="{Binding FWHM_error}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add Row" Click="AddButton_Click" Width="80" Margin="5"/>
            <Button Content="Delete Row" Click="DeleteButton_Click" Width="80" Margin="5"/>
            <Button Content="Save JSON" Click="SaveButton_Click" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
