<Window x:Class="XPSUI.RSF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XPSUI"
        mc:Ignorable="d"
        Title="RSF" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Close"/>
        </Menu>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="RsfDataGrid" Grid.Row="0" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Level (Name)" Binding="{Binding level}" Width="*"/>
                    <DataGridTextColumn Header="RSF (Value)" Binding="{Binding rsf}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Add Row" Click="AddButton_Click" Width="80" Margin="5"/>
                <Button Content="Delete Row" Click="DeleteButton_Click" Width="80" Margin="5"/>
                <Button Content="Save JSON" Click="SaveButton_Click" Width="80" Margin="5"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
